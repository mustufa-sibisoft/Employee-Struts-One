<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<!-- ========== Form Bean Definitions ================================== -->

	<form-beans>
		<form-bean name="insertRecord"
			type="com.empstruts.AddEmployeeForm" />
		<form-bean name="allRecordsForm"
			type="com.empstruts.AllEmployee" />
		<form-bean name="deleteRecordForm"
			type="com.empstruts.DeleteRecord" />
		<form-bean name="editEmployeeForm"
			type="com.empstruts.EditRecord" />

	</form-beans>

	<!-- ========== Action Mapping Definitions ============================= -->

	<action-mappings>
		<action name="inserRecord" path="/InsertRecord"
			type="com.empstruts.AddEmployeeAction" scope="request">
			<forward name="hello" path="/allRecords.jsp" />
		</action>
		<action name="allRecordsForm" path="/AllRecords"
			type="com.empstruts.AllEmployeeAction" scope="request">
			<forward name="hello" path="/allRecords.jsp" />
		</action>
		<action name="deleteRecordForm" path="/DeleteRecord"
			type="com.empstruts.DeleteRecordAction" scope="request">
			<forward name="hello" path="/allRecords.jsp" />
		</action>
		<action name="editRecordForm" path="/EditRecord"
			type="com.empstruts.EditEmployeeAction" scope="request">
			<forward name="hello" path="/allRecords.jsp" />
		</action>
		<action input="/login.jsp" name="LoginForm" path="/Login"
			scope="session" type="com.empstruts.LoginAction">
			<forward name="success" path="/success.jsp" />
			<forward name="failure" path="/failure.jsp" />
		</action>
	</action-mappings>

</struts-config>